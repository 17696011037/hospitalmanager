<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyhc.hospitalmanager.dao.PhysicalExaminationMapper">

    <!--添加体检信息-->
    <insert id="addPhysicalExaminationInfo">
        INSERT INTO physical_examination VALUES (#physicalExaminationId,#personId,#archivesId,#medicalResultsId,NOW())
    </insert>

    <!--  -->
    <select id="getPhysicalExaminationOrderByMedicalTime">
        SELECT `medical_time` FROM `physical_examination`
        WHERE `medical_time` LIKE '%'+#{now}+'%'
        ORDER BY `medical_time` DESC LIMIT 0,1
    </select>

</mapper>